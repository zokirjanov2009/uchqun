# Server Configuration
PORT=5000
NODE_ENV=development

# PostgreSQL Configuration
DB_NAME=uchqun
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# CORS Configuration
# Can be a single URL or multiple URLs separated by commas
# Allowed frontend URLs for CORS
FRONTEND_URL=http://localhost:5173,http://localhost:5174,http://localhost:5175,http://localhost:5176,http://localhost:5177,https://uchqun-platform.vercel.app

# Database Sync (set to true to force recreate tables - use with caution!)
FORCE_SYNC=false

# Super Admin Configuration
# Secret key for Super Admin panel (optional in development, required in production)
# If not set in development, Super Admin routes will work without key
# In production, this key MUST be set for security
SUPER_ADMIN_SECRET_KEY=your-super-admin-secret-key-change-this-in-production


